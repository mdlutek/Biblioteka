@model IEnumerable<LibraryApp.Models.BookReservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Book reservations</h1>

<p>
    <a asp-action="Create">Add new book reservation</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReservationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookReservationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookReservationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookReservationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
